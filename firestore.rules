
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // BOOKINGS COLLECTION - ADMIN ONLY
    match /bookings/{docId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == "9lUgLARr9PYOLQKboZ555BLhDsq2";
    }

    // Allow contact form submissions from anyone
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
    }
    
    // REVIEWS: Allow anyone to read, but only signed-in users to create.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // CUSTOMERS: Allow users to create/update their own customer profile
    match /customers/{customerId} {
      allow read, write: if request.auth != null && request.auth.uid == customerId;
    }
    
    // ADMIN ROLES: Only admins can read this collection
     match /roles_admin/{userId} {
      allow read: if request.auth != null && request.auth.uid == "9lUgLARr9PYOLQKboZ555BLhDsq2";
    }

    // DEFAULT DENY EVERYTHING ELSE for general access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
