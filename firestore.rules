
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // BOOKINGS: Anyone can create. Only admin can read/update/delete.
    match /bookings/{docId} {
      allow create: if true;
      // Allow list and get for the admin
      allow list, get: if request.auth != null && request.auth.token.email == "nikhilpandit9046@gmail.com";
      allow read, update, delete: if request.auth != null
        && request.auth.token.email == "nikhilpandit9046@gmail.com";
    }

    // CUSTOMERS: Only admin can read/write
    match /customers/{docId} {
      allow read, write: if request.auth != null
        && request.auth.token.email == "nikhilpandit9046@gmail.com";
    }

    // REVIEWS: Anyone can create. Admin can read/delete.
    match /reviews/{docId} {
      allow create: if true;
      allow list, get, delete: if request.auth != null 
        && request.auth.token.email == "nikhilpandit9046@gmail.com";
      // Public read access for the reviews page
      allow list, get: if request.auth == null || request.auth.token.email != "nikhilpandit9046@gmail.com";
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
