
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // BOOKINGS COLLECTION - ADMIN ONLY
    match /bookings/{docId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == "9lUgLARr9PYOLQKboZ555BLhDsq2";
    }

    // Allow contact form submissions from anyone
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
    }
    
    // Allow review submissions from any signed-in user
    match /reviews/{reviewId} {
      allow create: if request.auth != null;
    }

    // DEFAULT DENY EVERYTHING ELSE for general access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
