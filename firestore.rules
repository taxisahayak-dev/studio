rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // BOOKINGS COLLECTION
    match /bookings/{bookingId} {
      // Anyone can CREATE a booking
      allow create: if true;

      // Only admin can read, update, or delete
      allow read, update, delete: if request.auth != null && request.auth.token.email == "nikhilpandit9046@gmail.com";
    }

    // CONTACT FORM - Allow creation by anyone, admin has full access.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.token.email == "nikhilpandit9046@gmail.com";
    }
    
    // REVIEWS: Allow anyone to read, but only signed-in users to create.
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // CUSTOMERS: Allow users to create/update their own customer profile
    match /customers/{customerId} {
      allow read, write: if request.auth != null && request.auth.uid == customerId;
    }
    
    // ADMIN ROLES: Only admins can read this collection
     match /roles_admin/{userId} {
      allow read: if request.auth != null && request.auth.token.email == "nikhilpandit9046@gmail.com";
    }
  }
}
